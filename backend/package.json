{
  "name": "dyanpitt-backend",
  "version": "1.0.0",
  "description": "Backend for Dyanpitt app with MongoDB authentication",
  "main": "server.js",
  "engines": {
    "node": ">=20.19 <23"
  },
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "start:prod": "NODE_ENV=production node server.js",
    "start:staging": "NODE_ENV=staging node server.js",
    "dev": "NODE_ENV=development nodemon server.js",
    "dev:debug": "NODE_ENV=development DEBUG=* nodemon server.js",
    "test": "NODE_ENV=test node server.js",
    "lint": "echo 'Add ESLint for backend later'",
    "clean": "rm -rf node_modules uploads/temp_* uploads/anonymous_*",
    "db:seed": "node scripts/seed.js",
    "db:migrate": "node scripts/migrate.js",
    "logs": "tail -f logs/app.log",
    "health": "curl -f http://localhost:5000/api/health || exit 1"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "connect-mongo": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.3.1",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "multer": "^2.0.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.5",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "sharp": "^0.34.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "keywords": [
    "express",
    "mongodb",
    "passport",
    "authentication"
  ],
  "author": "Your Name",
  "license": "MIT"
}
