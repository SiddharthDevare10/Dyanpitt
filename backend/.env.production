# Production Backend Environment Variables

# Server Configuration
PORT=5000
NODE_ENV=production
FRONTEND_URL=https://yourdomain.com

# Database (Use MongoDB Atlas for production)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dyanpittapp?retryWrites=true&w=majority

# Security Secrets (GENERATE STRONG RANDOM STRINGS FOR PRODUCTION!)
JWT_SECRET=CHANGE-THIS-TO-A-SUPER-SECURE-64-CHARACTER-RANDOM-STRING-FOR-PRODUCTION
EMAIL_VERIFICATION_SECRET=CHANGE-THIS-TO-ANOTHER-SUPER-SECURE-64-CHARACTER-RANDOM-STRING
SESSION_SECRET=CHANGE-THIS-TO-THIRD-SUPER-SECURE-64-CHARACTER-RANDOM-STRING

# SMTP Email Configuration (Production)
SMTP_PROVIDER=gmail
SMTP_USER=noreply@yourdomain.com
SMTP_PASS=your-production-app-password
SMTP_FROM=noreply@yourdomain.com
APP_NAME=Dyanpitt

# Production Features
ENABLE_DEBUG_ENDPOINTS=false
ENABLE_CONSOLE_LOGS=false
ENABLE_ERROR_DETAILS=false

# Rate Limiting (Production values)
MAX_LOGIN_ATTEMPTS=5
MAX_OTP_ATTEMPTS=3
RATE_LIMIT_WINDOW=900000

# File Upload Limits (Production)
MAX_FILE_SIZE=5242880
UPLOAD_PATH=/var/uploads

# Session Configuration
SESSION_MAX_AGE=86400000
COOKIE_SECURE=true
COOKIE_SAME_SITE=none

# Monitoring & Logging
# SENTRY_DSN=your-sentry-dsn-for-error-tracking
# LOG_LEVEL=error
# METRICS_ENDPOINT=your-metrics-endpoint